<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_margin="8dp"
                                    android:layout_height="wrap_content" android:id="@+id/animeCardVIew">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:tint="#7F000000"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:srcCompat="@drawable/test"
                android:id="@+id/animeImageView"/>
        <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="AnimeTitle"
                android:textColor="#ffffff"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/animeTitleTextView"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_start"
                android:id="@+id/starImageView"
                android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/scoreTextView" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="63dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_height="26dp"
                android:ems="10"
                android:id="@+id/scoreTextView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="60dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>